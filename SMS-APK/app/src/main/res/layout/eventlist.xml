<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="349dp"
        android:layout_height="46dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="52dp" />

    <Button
        android:id="@+id/btnview"

        android:layout_width="76dp"
        android:layout_height="33dp"

        android:layout_marginTop="12dp"
        android:text="view"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:backgroundTint="#F85E35B1"
        app:layout_constraintStart_toStartOf="@+id/txt1"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <Button
        android:id="@+id/uptbtn"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="Update"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btnview"
        app:layout_constraintTop_toTopOf="@+id/btnview" />

    <Button
        android:id="@+id/delbtn"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:text="Delete"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/uptbtn"
        app:layout_constraintTop_toTopOf="@+id/uptbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>