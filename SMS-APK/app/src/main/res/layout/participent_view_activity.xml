<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transection_view_activity">

    <EditText
        android:id="@+id/parti_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Reciever_Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/parti_sure_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Transection ID"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/parti_name"
        app:layout_constraintTop_toBottomOf="@+id/parti_name" />

    <EditText
        android:id="@+id/parti_age"
        android:layout_width="176dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/parti_sure_name"
        app:layout_constraintTop_toBottomOf="@+id/parti_sure_name" />

    <Spinner
        android:id="@+id/parti_event_spinner"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/parti_age"
        app:layout_constraintTop_toBottomOf="@+id/parti_age" />

    <EditText
        android:id="@+id/cnic"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Status"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/parti_event_spinner"
        app:layout_constraintTop_toBottomOf="@+id/parti_event_spinner" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="262dp"
        android:layout_height="47dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="40dp"
        android:background="#491898"
        android:paddingLeft="40dp"
        android:text="Add Transections"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddUpdatePartiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="56dp"
        android:text="Finish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnic" />
</androidx.constraintlayout.widget.ConstraintLayout>