<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/hallDeleteBtn"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@+id/hallUpdateBtn"
        app:layout_constraintTop_toTopOf="@+id/hallUpdateBtn" />

    <TextView
        android:id="@+id/hall_list_view"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hallViewBtn"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hall_list_view" />

    <Button
        android:id="@+id/hallUpdateBtn"
        android:layout_width="85dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="@+id/hallViewBtn"
        app:layout_constraintStart_toEndOf="@+id/hallViewBtn"
        app:layout_constraintTop_toTopOf="@+id/hallViewBtn"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>